<Controls:MetroWindow x:Class="Restaurant.WPF.Views.Discount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.WPF.Views"
        mc:Ignorable="d"
        Title="Discount" Width="450" Height="220" ResizeMode="NoResize"  BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                    BorderThickness="1">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="0,40,0,0">
            <Button Padding="20,10,20,10"  Background="{DynamicResource MahApps.Brushes.Accent2}" Margin="10,10,10,10" Click="DiscountKeys">Discount Keys</Button>
            <Button Padding="20,10,20,10"  Background="{DynamicResource MahApps.Brushes.Accent2}" Margin="0,10,10,10" Click="VoucherDiscount">Vouchers</Button>
            <Button Padding="20,10,20,10"  Background="{DynamicResource MahApps.Brushes.Accent2}" Margin="0,10,10,10">Points Redeem</Button>
        </WrapPanel>
        <Button HorizontalAlignment="Right" Padding="20,5,20,5" Margin="10,10,10,10" VerticalAlignment="Bottom" Click="Exit">Exit</Button>
    </Grid>
</Controls:MetroWindow>
