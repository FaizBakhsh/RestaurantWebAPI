<Controls:MetroWindow x:Class="Restaurant.WPF.Views.KitchenInventry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.WPF.Views"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"              
        mc:Ignorable="d"
        Title="Kitchen " WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions  >
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions  >
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Click="Close" HorizontalAlignment="Right" Grid.Row="0" Width="100" Padding="5,5,5,5" Margin="5,5,25,5">Back</Button>
        <ScrollViewer  VerticalScrollBarVisibility="Auto"  Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch" 
                   VerticalAlignment="Top" Name="orders">
            </WrapPanel >
        </ScrollViewer>
    </Grid>
</Controls:MetroWindow>

