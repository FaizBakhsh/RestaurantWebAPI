<Controls:MetroWindow x:Class="Restaurant.WPF.Views.ChangeBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.WPF.Views"
        mc:Ignorable="d"
        Title="Change Bill" Width="550" Height="200"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderBrush="{DynamicResource MahApps.Brushes.Accent4}" BorderThickness="1">
    <Grid>
        <WrapPanel Orientation="Horizontal" Margin="0,50,0,0" HorizontalAlignment="Center" >
            <Button Padding="20,5,20,5" Width="201" Height="40" FontWeight="Bold" Background="{DynamicResource MahApps.Brushes.Accent}" Click="ReOpen">ReOpen</Button>
            <Button Padding="20,5,20,5" Width="201" FontWeight="Bold"  Height="40" Margin="5,0,0,0" Background="{DynamicResource MahApps.Brushes.Accent}" Click="ReName">ReName</Button>
        </WrapPanel>
        <Button Padding="20,5,20,5" Click="Exit" Width="100" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="40" Margin="5,5,15,15"   >Exit</Button>
    </Grid>
</Controls:MetroWindow>
