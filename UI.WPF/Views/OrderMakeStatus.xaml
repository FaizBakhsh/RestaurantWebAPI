<Controls:MetroWindow x:Class="Restaurant.WPF.Views.OrderMakeStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.WPF.Views"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="OrderMakeStatus"  Width="550" Height="200" ResizeMode="NoResize" 
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent4}"
                    
                    BorderThickness="1">
    <Grid>
        <WrapPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button x:Name="BeforeBtn" Padding="20,5,20,5" Width="201" Height="40" FontWeight="Bold" Background="{DynamicResource MahApps.Brushes.Accent2}" Click="BeforeMaking">Before Making</Button>
            <Button x:Name="AfterBtn" Padding="20,5,20,5" Click="AfterMaking" Width="201" FontWeight="Bold"  Height="40" Margin="5,0,0,0" Background="{DynamicResource MahApps.Brushes.Accent2}"   >After Making</Button>
        </WrapPanel>
    </Grid>
</Controls:MetroWindow>
